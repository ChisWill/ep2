{
    "name": "chiswill/ep2",
    "description": "Elastic PHP",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0.2",
        "ext-json": "*",
        "chiswill/ep-helper": "dev-master",
        "httpsoft/http-emitter": "^1.0.4",
        "httpsoft/http-message": "^1.0.5",
        "httpsoft/http-server-request": "^1.0.5",
        "nikic/fast-route": "^1.3",
        "symfony/console": "^6.0",
        "symfony/event-dispatcher-contracts": "^2.4",
        "vlucas/phpdotenv": "^5.3",
        "yiisoft/active-record": "dev-master",
        "yiisoft/aliases": "^2.0",
        "yiisoft/arrays": "^2.0",
        "yiisoft/assets": "^2.0",
        "yiisoft/auth": "^3.0",
        "yiisoft/cache-file": "^1.0",
        "yiisoft/db": "dev-master",
        "yiisoft/di": "^1.0",
        "yiisoft/factory": "^1.0",
        "yiisoft/files": "^1.0",
        "yiisoft/html": "^2.0",
        "yiisoft/http": "^1.0",
        "yiisoft/injector": "^1.0",
        "yiisoft/json": "^1.0",
        "yiisoft/log": "^2.0",
        "yiisoft/session": "^1.0",
        "yiisoft/strings": "^2.0",
        "yiisoft/validator": "dev-master",
        "yiisoft/yii-event": "^1.0"
    },
    "require-dev": {
        "phpbench/phpbench": "^1.0",
        "phpunit/phpunit": "^9.4",
        "vimeo/psalm": "^4.5",
        "yiisoft/db-mysql": "dev-master",
        "yiisoft/db-sqlite": "dev-master",
        "yiisoft/log-target-file": "^1.0"
    },
    "suggest": {
        "ext-openssl": "Allows to encrypt and decrypt"
    },
    "autoload": {
        "files": [
            "src/Ep.php",
            "src/functions.php"
        ],
        "psr-4": {
            "Ep\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ep\\Tests\\": "tests",
            "Ep\\Tests\\App\\": "tests/App/src"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('./tests/App/.env') || copy('./tests/App/.env.example', './tests/App/.env');\"",
            "@php ./bin/ep generate/key"
        ],
        "post-update-cmd": [
            "@php ./bin/ep scan --ns=Ep/Tests/Support"
        ],
        "post-autoload-dump": []
    },
    "bin": [
        "bin/ep"
    ],
    "config": {
        "sort-packages": true
    }
}